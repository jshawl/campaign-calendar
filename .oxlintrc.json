{
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "style": "error",
    "pedantic": "error"
  },
  "rules": {
    "no-magic-numbers": ["off"],
    "no-console": ["error"],
    "max-lines": ["off"],
    "max-lines-per-function": ["off"],
    "consistent-type-definitions": ["off"]
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "rules": {
        "no-console": ["off"]
      }
    },
    {
      "files": ["*.d.ts"],
      "rules": {
        "id-length": ["off"]
      }
    }
  ]
}
