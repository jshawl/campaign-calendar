{
  "name": "neoncrm-calendar",
  "version": "1.0.0",
  "description": "neoncrm calendar wordpress plugin",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "oxlint",
    "test": "npm run test:js && npm run test:php",
    "test:js": "vitest run",
    "test:coverage": "vitest run --coverage",
    "wp-env": "wp-env",
    "test:php": "wp-env run tests-cli --env-cwd=wp-content/plugins/neoncrm-calendar /var/www/html/vendor/bin/phpunit",
    "plugin:check": "wp-env run cli --env-cwd=wp-content/plugins/neoncrm-calendar -- wp plugin"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "prettier": {
    "plugins": [
      "@prettier/plugin-php"
    ]
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.24.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@wordpress/env": "^10.29.0",
    "jsdom": "^26.1.0",
    "oxlint": "^1.14.0",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  }
}
